<div class="jumbo show-listing">
  <h2 class="title">{{cs-field content "title"}}</h2>
  <div class="right detail-section">
    <div class="detail owner">
      <strong>Owner:</strong> {{cs-field content "owner"}}
    </div>
    <div class="detail owner">
      <strong>Realtor:</strong> 
      {{#cs-field content "realtor" as |realtor|}}
        {{link-to realtor.name 'realtor' realtor}}
      {{/cs-field}}
    </div>
    <div class="detail">
      <strong>Type:</strong>
      {{#cs-field content "propertyType" as |propertyType|}}
        {{rental-property-type propertyType}} - {{propertyType}}
      {{/cs-field}}
    </div>
    <div class="detail">
      <strong>Location:</strong> {{cs-field content "city"}}
    </div>
    <div class="detail">
      <strong>Number of bedrooms:</strong> {{cs-field content "bedrooms"}}
    <div class="detail">
      <strong>Sleeps:</strong>
      {{#cs-field-group content name="sleeps" fields="bedrooms"}}
        {{content.sleeps}}
      {{/cs-field-group}}
    </div>
    </div>
    <p>&nbsp;</p>
    <p class="description">{{cs-field content "description"}}</p>
  </div>

  {{#cs-field content "image" as |src|}}
    <img src={{src}} class="rental-pic">
  {{/cs-field}}

</div>
